# Smart School System Environment Variables for XAMPP
# Copy this content to your .env file

# Database Configuration - Individual Variables (for real_backend.py)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=smart_school_db
DB_PORT=3306

# Database Configuration - Connection String (for SQLAlchemy)
DATABASE_URL=mysql://root:@localhost:3306/smart_school_db

# Security Keys
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# OpenAI Configuration (optional)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Security Settings
BCRYPT_LOG_ROUNDS=12
WTF_CSRF_ENABLED=True

# Development Settings
FLASK_ENV=development
FLASK_DEBUG=True
